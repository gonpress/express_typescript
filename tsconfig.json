{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
  },
  "exclude" : [
    "node_modules"
  ],
  "include" : [
    "src/**/*.ts"
  ]
}